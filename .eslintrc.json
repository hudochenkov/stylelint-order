{
	"extends": [
		"eslint-config-hudochenkov",
		"eslint-config-prettier"
	],
	"plugins": [
		"prettier"
	],
	"env": {
		"browser": false,
		"node": true,
		"es6": true,
		"jest": true
	},
	"globals": {
		"testConfig": true,
		"testRule": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 100,
				"useTabs": true,
				"singleQuote": true,
				"trailingComma": "es5"
			}
		]
	}
}
